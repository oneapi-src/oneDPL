#ifndef __ONEDPL_optional
#define __ONEDPL_optional

#include "oneapi/dpl/internal/common_config.h"
#include <optional>

namespace oneapi
{
namespace dpl
{
#if __cplusplus > 201402L
using ::std::make_optional;     // KSATODO: leave as is: https://en.cppreference.com/w/cpp/utility/optional/make_optional - since C++17
using ::std::nullopt;           // KSATODO: leave as is: https://en.cppreference.com/w/cpp/utility/optional/nullopt - since C++17
using ::std::nullopt_t;         // KSATODO: leave as is: https://en.cppreference.com/w/cpp/types/nullptr_t - since C++17
using ::std::optional;          // KSATODO: leave as is: https://en.cppreference.com/w/cpp/utility/optional - since C++17
#endif // __cplusplus > 201402L
} // namespace dpl
} // namespace oneapi

namespace dpl = oneapi::dpl;

#endif // __ONEDPL_optional
