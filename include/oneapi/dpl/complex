#ifndef __ONEDPL_complex
#define __ONEDPL_complex

#include "oneapi/dpl/internal/common_config.h"
#include <complex>

namespace oneapi
{
namespace dpl
{
using ::std::complex;

using ::std::arg;
using ::std::conj;

template <class T>
T
abs(const complex<T>& z)
{
    return ::std::abs(z);
}

} // namespace dpl
} // namespace oneapi

namespace dpl = oneapi::dpl;

#endif // __ONEDPL_complex
